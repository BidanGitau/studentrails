
<div id="page-content">
<div class="container">
<% @articles.each do |article| %>

<div class="row justify-content-center">
<div class="col-9 mt-4">
<div class="card text-center shadow mb-5 bg-white rounded">
  <div class="card-header">
    <i>by <%= article.user.username %></i>
  </div>
  <div class="card-body">
    <h5 class="card-title"><%= link_to article.title ,article_path(article),class:"text-success"%></h5>
    <p class="card-text"><%= truncate(article.description,length:20) %></p>
        <%= link_to "Veiw" ,article,class:"btn btn-outline-success" %>
        <%= link_to 'Edit', edit_article_path(article),class:"btn btn-outline-info" %>
         <%=button_to "Delete", article_path(article), class: "btn btn-outline-danger", method: :delete%>
  </div>
  <div class="card-footer text-muted">
   <small>Created: <%= time_ago_in_words(article.created_at) %>ago, edited <%= time_ago_in_words(article.updated_at)%></small>
  </div>
</div>
</div>
</div>

<% end %>

</div>

</div>

