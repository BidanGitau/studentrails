<h1><Article> Article listing page</Article></h1>
<table>
<thead>
<tr>
<th>title</th>
<th class="my-class">Description</th>
<th>Actions</th>
</tr>
</thead>

<tbody>
<%= javascript_include_tag "application" %>
<% @articles.each do |article| %>
<tr>
        <td><%= article.title %></td>
        <td><%= article.description %></td>
      
        <td><%= button_to 'Show', article_path(article),method: :get %></td>
        <td><%= button_to 'Edit', edit_article_path(article), method: :get%></td>
        <td><%= button_to 'Delete', article_path(article),method: :delete,data: { confirm: "Are you sure?" }  %></td>   
</tr>
<% end %>

</tbody>
</table>
<p>
<%= link_to 'Create new article', new_article_path %>
</p>